<body>
    <header class="main-header">
        <div class="container header-content">
            <div class="logo-container">
                <a href="/" class="site-logo-link">
                    <img src="/images/gezginrotam_logo.png" alt="Tatildeki Rotam Logo" class="site-logo">

                </a>
                <h1 class="site-title"><a href="/" class="site-logo-link">Tatildeki Rotam</a></h1>
            </div>

            <nav class="main-nav">
                <ul class="nav-links">
                    <li><a href="/">Ana Sayfa</a></li>
                    <li class="has-submenu">
                        <a href="#">Ülkeler</a>
                        <ul class="submenu">
                            <% if (countries && allCities) { %>
                                <% countries.forEach(function(country) { %>
                                    <li class="has-submenu">
                                        <a href="/country/<%= country.id %>">
                                            <%= country.name %>
                                        </a>
                                        <ul class="submenu">
                                            <% const countryCities = allCities.filter(c => c.countryId === country.id); %>
                                            <% if (countryCities.length > 0) { %>
                                                <% countryCities.forEach(function(city) { %>
                                                    <li>
                                                        <a href="/city/<%= city.id %>">
                                                            <%= city.name %>
                                                        </a>
                                                    </li>
                                                <% }); %>
                                            <% } else { %>
                                                <li><a href="#">Şehir yok</a></li>
                                            <% } %>
                                        </ul>
                                    </li>
                                <% }); %>
                            <% } %>
                        </ul>
                    </li>
                    <li><a href="/search-results">
                        <i class="fas fa-search"></i>
                    </a></li>
                </ul>
            </nav>

            <button class="menu-toggle" aria-label="Menüyü aç/kapa">
                <span class="hamburger"></span>
            </button>
        </div>
    </header>

    <div class="mobile-menu">
        <div class="mobile-menu-header">
            <a href="/" class="site-logo-link">
                <img src="/images/gezginrotam_logo.png" alt="Tatildeki Rotam Logo" class="site-logo-mobile">
                <h1 class="site-title">Tatildeki Rotam</h1>

            </a>
            <button class="menu-toggle" aria-label="Menüyü kapat">
                <span class="hamburger"></span>
            </button>
        </div>
        <ul class="mobile-nav-links">
            <li><a href="/" class="mobile-nav-link">Ana Sayfa</a></li>
            <li class="has-submenu-mobile">
                <span class="mobile-nav-link">Ülkeler</span>
                <ul class="submenu-mobile">
                    <% if (countries && allCities) { %>
                        <% countries.forEach(function(country) { %>
                            <li class="has-submenu-mobile">
                                <a href="/country/<%= country.id %>">
                                    <%= country.name %>
                                </a>
                                <ul class="submenu-mobile">
                                    <% const countryCities = allCities.filter(c => c.countryId === country.id); %>
                                    <% if (countryCities.length > 0) { %>
                                        <% countryCities.forEach(function(city) { %>
                                            <li>
                                                <a href="/city/<%= city.id %>">
                                                    <%= city.name %>
                                                </a>
                                            </li>
                                        <% }); %>
                                    <% } %>
                                </ul>
                            </li>
                        <% }); %>
                    <% } %>
                </ul>
            </li>
            </ul>
