    <header class="main-header">
        <div class="container header-content">
            <div class="logo-container">
                <a href="/" class="site-logo-link">
                    <img src="/images/gezginrotam_logo.png" alt="Gezgin Rotam Logo" class="site-logo">
                    <span class="site-title">Tatildeki Rotam</span>
                </a>
            </div>
            <nav class="main-nav">
                <button class="hamburger-menu" aria-label="Menüyü Aç/Kapat">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <ul class="nav-links">
                 <li><a href="/">Ana Sayfa</a></li>
                    <% if (typeof countries !== 'undefined' && countries.length > 0 && typeof allCities !== 'undefined') { %>
                    <% countries.forEach(function(country) { %>
                <li class="has-submenu">
                    <a href="/country/<%= country.id %>"><%= country.name %> <span class="arrow-down"></span></a>
                <ul class="submenu">
                    <%
                        var countryCities = allCities.filter(function(city) {
                            return city.countryId === country.id;
                        });
                    %>
                    <% if (countryCities.length > 0) { %>
                        <% countryCities.forEach(function(city) { %>
                            <li><a href="/city/<%= city.id %>"><%= city.name %></a></li>
                        <% }); %>
                    <% } else { %>
                        <li><a href="#">Şehir yok</a></li>
                    <% } %>
                </ul>
                </li>
            <% }); %>
        <% } %>
            <li class="search-icon-container">
                <a href="/search-results" id="openSearchBtn" aria-label="Arama Kutusu Aç">
                    <i class="fas fa-search"></i>
                </a>
            </li>
        </ul>
            </nav>
        </div>
    </header>

    <div id="search-overlay" class="search-overlay">
    <span class="close-search-btn" aria-label="Aramayı Kapat">&times;</span>
    <div class="search-overlay-content">
        <form action="/search-results" method="GET" class="search-overlay-form">
            <input type="text" name="query" placeholder="Şehir, ülke veya rota ara..." required autofocus>
            <button type="submit">
                <i class="fas fa-search"></i> Ara
            </button>
        </form>
    </div>
